{
  "manifest_version": 2,

  "name": "GUI Tester",
  "description": "Tento doplněk testuje GUI elementy webové stránky",
  "version": "0.3",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
 
  
  "content_scripts": [ {
    "matches": ["http://*/*","https://*/*"],
    "js": ["jquery.min.js"]
    } ],


  "devtools_page": "devtools.html",

  "browser_action": {
    "default_icon":  "icon.png"
  },
  

  "permissions": [
    "storage",
    "unlimitedStorage", 
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
